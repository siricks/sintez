mixin slides(slides)
	-for(var slide of slides)
		.swiper-slide__scale.swiper-slide
			.swiper-slide__scale-img-wrapper.swiper-slide__img-wrapper
				img.swiper-slide__img(src=require(`../../components/what-we-created/what-we-created-${slide.img}.png`) alt="")
			.swiper-slide__text-wrapper
				.swiper-slide__title=slide.title
				.swiper-slide__text=slide.text
				.swiper-slide__bottom
					a.link(href="/slide").swiper-slide__link Подробнее

mixin carouselWithCards(params)
	-var {sectionClass, title, carouselTitle, subtitle, carouselLinkContent} = params

	section(class=sectionClass).carousel.padding-top.padding-bottom.wrapper
		.carousel__inner
			h2.title(class={'carousel__title': carouselTitle})=title
			-if(subtitle)
				.carousel__sub-title=subtitle
			.swiper-outer.no-pagination-on-desktop(class={'swiper-outer_with-subtitle': subtitle})
				.swiper-container(data-slidesPerView="2" data-spaceBetween="20" data-loop="true" data-arrows="true")
					.swiper-wrapper
						+slides([
							{
								img: 1,
								title: 'Разработка домашнего VR-кинотеатра',
								text: 'Очки дополненной реальности имеют не очень хорошую репутацию, когда речь заходит о конфиденциальности. Тем не менее, исследователи из Университета Северной Каролины считают, что это устройство может на самом деле обеспечить отличную конфиденциальность владельцу через канал связи.'
							},
							{
								img: 2,
								title: 'Разработка домашнего VR-кинотеатра',
								text: 'Очки дополненной реальности имеют не очень хорошую репутацию, когда речь заходит о конфиденциальности. Тем не менее, исследователи из Университета Северной Каролины считают, что это устройство может на самом деле обеспечить отличную конфиденциальность владельцу через канал связи.'
							}
						])
				.swiper__arrow.swiper__arrow_prev
				.swiper__arrow.swiper__arrow_next
				.custom-pagination.swiper-pagination
			a.carousel__inner-link.btn.btn_accent(href="/more")=carouselLinkContent
